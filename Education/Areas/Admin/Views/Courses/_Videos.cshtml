@model VideoModel_Edit
<div style="display:none" id="EditVideo" class="ExtendedForm">
    <form id="EditVideoForm" class="form-inline container-fluid">
        <input  asp-for="CourseId_Edit" class="hidden">
        <input asp-for="IsVideoChanged" class="hidden" value="false">
        <input type="hidden" asp-for="Id_Edit" class="input100">
        <div class="formAlert alert alert-danger"></div>
        <div class="form-group">
            <div class="wrap-input100 validate-input ">
                <input asp-for="Title_Edit" class="input100">
                <span asp-validation-for="Title_Edit" class="focus-input100"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="wrap-input100 validate-input ">
                <textarea asp-for="Description_Edit"
                          style="height:100px;padding-top: 12px;" class="input100">
                                </textarea>
                <span asp-validation-for="Description_Edit" class="focus-input100"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="wrap-input100 validate-input">
                <input sty asp-for="VideoNumber_Edit" class="input100">
                <span asp-validation-for="VideoNumber_Edit" class="focus-input100"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="IsYoutube_Edit"></label>
            <label class="radio-inline pull-right">
                <input type="radio" name="IsYoutube" disabled id="youtubeChoice" value="true">
                <span class="text">بواسطة رابط يوتيوب</span>
            </label>
            <label class="radio-inline pull-right">
                <input type="radio" name="IsYoutube" id="notyoutubeChoice" value="false" checked>
                <span class="text">تحميل الفديو من الجهاز</span>
            </label>
        </div>
        <div style="display:none" class="form-group notyoutubeChoice">
            <div class="wrap-input100 validate-input ">
                <input style="display:none"  asp-for="Url_Edit" class="input100">
                <span asp-validation-for="Url_Edit" class="focus-input100"></span>
            </div>
        </div>
        <div class="form-group youtubeChoice">
            <div class="custom-file">
                <input title="من مفضلك قم بتحميل ملف الفديو" asp-for="Video_Edit" accept="video/*" class="custom-file-input">
                <label ng-controller="courseData" class="custom-file-label" for="Video_Edit">
                    <span ng-bind="VideoTextTitle" class="text">تغيير ملف الفديو</span>
                </label>
            </div>
        </div>
        <div class="form-group">
            <div style="display:none" id="VideoUploadProgressbar_Edit"></div>
        </div>
        <div class="form-group">
            <button type="button" id="EditSubmitVideoTutorialBtn" class="login100-form-btn">
                <i class="fa fa-check-circle-o"></i>
                <span class="text">حفظ</span>
            </button>
        </div>
    </form>
</div>

<div class="title">
    <h4 class="text-center text-primary">فيديوهات الكورس</h4>
    <div class="title-body">
        <button style="margin:3px"
                id="AddNewVideo"
                data-toggle="modal"
                data-target="#AddVideoModal"
                class="btn btn-primary">
            <span> اضافة فديو جديد</span>
            <i class="fa fa-plus"></i>
        </button>
     
        <table ng-controller="courseData" class="table table-hover table-bordered table-striped rounded" id="VideosTable">
            <thead>
                <tr>
                    <th></th>
                    <th>الترتيب</th>
                    <th>العنوان</th>
                    <th>الفيديو</th>
                    <th>التفاصيل</th>
                    <th>التحكم</th>
                </tr>
            </thead>
        </table>
    </div>
</div>
